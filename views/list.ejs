<% include partials/header %>

    <div class="jumbotron jumbotron-fluid">
        <h1 class="campgroundsList-title">All Campgrounds</h1>
        <a  href="/" class="btn btn-primary btn-lg btn-blueback" role="button" aria-pressed="true">Homepage</a>
    </div>

    <!-- List of all campgrounds --> 
    <div class="container">
        <div class="row">
            <% campgrounds.forEach( (ground)  => { %>
                <!-- Column with campsite -->
                <div class="col col-md-3 col-sml-6">
                    <div class="img-thumbnail">
                        <img id="campground-list-img" src="<%= ground.image %>">
                        <div class="caption">
                                <figcaption class="figure-caption"><a href="/campgrounds/<%= ground._id %>"><h3> <%= ground.name %> </h3></a></figcaption>
                                <figcaption class="figure-caption"><h5> <%= ground.location %> </h5></figcaption>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>   
    </div>

    <div class="container">
        <h1 class="form-title">Add a new campsite</h1>
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="campName">Camp Name:</label>
                <input type="text" class="form-control" id="campName"  name="campName" placeholder="Enter Camp Name">
            </div>
            <div class="form-group">
                <label for="campImage">Camp Image:</label>
                <input type="url" class="form-control" name="campImage" id="campImage" placeholder="Image URL">
            </div>
            <div class="form-group">
                <label for="campLocation">Camp Location:</label>
                <input type="text" class="form-control" name="campLocation" id="campLocation" placeholder="Camp Location">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

<% include partials/footer %>